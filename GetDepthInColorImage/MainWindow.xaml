<Window x:Class="GetDepthInColorImage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800" Loaded="WindowLoaded" Closing="WindowClosing">
    <Grid>
        <Label Name="mousePosLbl" HorizontalAlignment="Center" VerticalAlignment="Top" />
        <Image Width="640" Height="480" Name="image1" MouseMove="image1_MouseMove" MouseDown="image1_MouseDown" />
        <Canvas Width="640" Height="480" HorizontalAlignment="Center">
            <Rectangle Width="160" Height="160" Canvas.Left="200" Canvas.Top="100" 
                       Stroke="#FFF61010" StrokeThickness="2" Name="faceRect" />
        </Canvas>
        <Label HorizontalAlignment="Left" VerticalAlignment="Bottom" Name="statusLbl" />
    </Grid>
</Window>
